@model TutorApp.Website.Models.Topic
@{
}
<div class="isotope_filters isotope-courses-streampag">
    <a href="#" data-filter="*" class="isotope_filters_button" onclick="toDashboard()">Home</a>
    <a href="#" data-filter="*" class="isotope_filters_button active">
        Add Topic
    </a>
</div>
<form method="post" asp-action="addTopic">
    <input type="hidden" asp-for="SubjectId" />
    <div class="form-group">
        <label for="className" style="font-weight: 700;">Name:</label>
        <input asp-for="TopicName" type="text" class="form-control" placeholder="enter topic name" style="border: 0.5px solid lightgrey;">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
<script>
    function toDashboard() {
        window.location.href = `dashboard`;
    }
</script>