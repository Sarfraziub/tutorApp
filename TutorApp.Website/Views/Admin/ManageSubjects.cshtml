@model IEnumerable<TutorApp.Website.Models.Subject>

<h2>Manage Subjects for Class: @ViewBag.ClassName</h2>

<table class="table">
    <thead>
        <tr>
            <th>Subject Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.SubjectName</td>
            </tr>
        }
    </tbody>
</table>

