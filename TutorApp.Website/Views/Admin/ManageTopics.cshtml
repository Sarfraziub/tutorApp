@model IEnumerable<TutorApp.Website.Models.Topic>

<h2>Manage Topics for Subject: @ViewBag.SubjectName</h2>

<table class="table">
    <thead>
        <tr>
            <th>Topic Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var topic in Model)
        {
            <tr>
                <td>@topic.TopicName</td>
            </tr>
        }
    </tbody>
</table>

