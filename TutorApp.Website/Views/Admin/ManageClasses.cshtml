@model IEnumerable<TutorApp.Website.Models.Class>

<h2>Manage Classes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Class Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.ClassName</td>
            </tr>
        }
    </tbody>
</table>

@using (Html.BeginForm("AddClass", "Admin", FormMethod.Post)) 
{
    <div class="form-group">
        <label for="ClassName">Class Name:</label>
        <input type="text" name="ClassName" id="ClassName" class="form-control" required />
    </div>

    <input type="submit" value="Add Class" class="btn btn-primary" />
}
